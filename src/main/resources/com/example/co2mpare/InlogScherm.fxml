<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<StackPane fx:controller="com.example.co2mpare.InlogController" xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: black;">
  <VBox spacing="20" alignment="CENTER">
    <!-- Titel -->
    <Text text="Inloggen" fill="white" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Gebruikersnaam -->
    <TextField fx:id="usernameField" promptText="Gebruikersnaam" style="-fx-background-color: white; -fx-text-fill: black;"/>

    <!-- Wachtwoord -->
    <PasswordField fx:id="passwordField" promptText="Wachtwoord" style="-fx-background-color: white; -fx-text-fill: black;"/>

    <!-- Inlogknop -->
    <Button text="Inloggen" style="-fx-background-color: #007bff; -fx-text-fill: white;" onAction="#handleLoginButtonClick"/>

    <!-- Foutmelding -->
    <Text fx:id="errorMessage" fill="red" style="-fx-font-size: 14px;"/>
  </VBox>
</StackPane>
