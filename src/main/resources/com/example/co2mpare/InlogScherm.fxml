<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.co2mpare.HelloController" style="-fx-background-color: black; -fx-font-family: Arial; -fx-font-size: 14px;">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText" text="Welkom bij Co2mpare" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
  <Label fx:id="emailLabel" text="E-mail" style="-fx-text-fill: white;"/>
  <TextField fx:id="emailTextField" promptText="E-mail" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;"/>

  <Label fx:id="passwordLabel" text="Wachtwoord" style="-fx-text-fill: white;"/>
  <PasswordField fx:id="passwordField" promptText="Wachtwoord" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;"/>

  <Button text="Inloggen" onAction="#onLoginButtonClick" style="-fx-background-color: #3b3b3b; -fx-text-fill: white;"/>
  <Button text="Registreren" onAction="#onRegisterButtonClick" style="-fx-background-color: #3b3b3b; -fx-text-fill: white;"/>

  <Label text="Door aan te melden, ga je akkoord met onze Algemene Voorwaarden en Privacybeleid." style="-fx-text-fill: white; -fx-font-size: 10px;"/>

  <Label text="Â© 2023 Co2mpare. Alle rechten voorbehouden." style="-fx-text-fill: white; -fx-font-size: 10px;"/>
</VBox>
