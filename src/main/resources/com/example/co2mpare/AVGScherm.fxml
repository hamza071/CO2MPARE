<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="667" prefWidth="375" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.co2mpare.BestellingenController">

    <VBox alignment="TOP_CENTER" prefHeight="667" prefWidth="375" spacing="10" style="-fx-padding: 20;">

        <!-- Header -->
        <HBox alignment="CENTER" prefWidth="375" spacing="10" style="-fx-padding: 10; -fx-background-color: #333;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="AVG" />
            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                <image>
                    <Image url="@../../../Images/logo.png" />
                </image>
            </ImageView>
        </HBox>

        <!-- Bestellingen informatie -->
        <VBox prefWidth="335" spacing="15" style="-fx-padding: 20; -fx-background-color: #2c2c2c; -fx-background-radius: 10;">

            <Label style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;" text="AVG-VERKLARING" />

            <!-- Contactgegevens -->
            <Label prefHeight="421.0" prefWidth="295.0" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;" text="CO2MPARE hecht veel waarde aan de bescherming van jouw privacy. De app verzamelt uitsluitend gegevens die nodig zijn voor het functioneren van de applicatie en verwerkt deze volgens de Algemene Verordening Gegevensbescherming (AVG). Persoonlijke gegevens worden niet gedeeld met derden zonder jouw toestemming en zijn veilig opgeslagen. Heb je vragen? Neem gerust contact op via onze supportpagina." />
            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" />

            <Label style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Label prefHeight="193.0" prefWidth="295.0" style="-fx-font-size: 14px; -fx-text-fill: white;" />

            <!-- Verduidelijking tekst in vier regels -->
            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" />
        </VBox>

        <Region fx:id="spacer" VBox.vgrow="ALWAYS" />

        <!-- Knop om terug te gaan naar instellingen -->
        <Button onMouseClicked="#goToSettings" style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5;" text="Terug naar Instellingen" />

    </VBox>
</StackPane>
