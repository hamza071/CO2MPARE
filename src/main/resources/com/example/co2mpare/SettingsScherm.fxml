<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: black;">
    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">

        <!-- Header -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: #333;">
            <ImageView fx:id="logo" fitWidth="30" fitHeight="30" preserveRatio="true" />
            <Label text="CO\u2082MPARE." style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>

        <!-- Instellingen Lijst -->
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #2c2c2c; -fx-background-radius: 10;">

            <!-- Account en Abonnement -->
            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <!-- Rij 1 -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="accountIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Account" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="subscriptionIcon" fitWidth="20" fitHeight="20" />
                    <Label text="My subscription" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
            </GridPane>

            <!-- Instellingen opties -->
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="generalSettingsIcon" fitWidth="20" fitHeight="20" />
                    <Label text="General settings" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="privacySettingsIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Privacy settings" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="notificationSettingsIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Notification preferences" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="appearanceSettingsIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Appearance settings" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="microbitIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Connect with Micro:bit" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="advancedSettingsIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Advanced settings" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
            </VBox>

            <!-- Help en Uitloggen -->
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="helpIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Help and support" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 10; -fx-background-radius: 5;">
                    <ImageView fx:id="signOutIcon" fitWidth="20" fitHeight="20" />
                    <Label text="Sign out" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    <Button text=">" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                </HBox>
            </VBox>
        </VBox>

        <!-- Footer Navigatie -->
        <HBox spacing="50" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #222;">
            <Button text="🏠" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="📊" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="⚙" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
        </HBox>
    </VBox>
</StackPane>
