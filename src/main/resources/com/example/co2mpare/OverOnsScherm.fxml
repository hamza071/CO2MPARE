<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="667" prefWidth="375" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.co2mpare.OverOnsController">

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: #2c2c2c; -fx-background-radius: 10;">

        <!-- FAQ Titel -->
        <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center;" text="Over ons" />

        <!-- Informatieblok -->
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #3c3c3c; -fx-background-radius: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Ons verhaal" />
            <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="CO2MPARE begon als een schoolproject van een groep studenten met een passie voor technologie en duurzaamheid. Ons doel was om een gebruiksvriendelijke app te ontwikkelen die jongeren inspireert om bewuster om te gaan met het milieu. Wat begon als een opdracht, groeide uit tot een applicatie die niet alleen praktisch is, maar ook bijdraagt aan een groenere toekomst. Dit project staat voor samenwerking, innovatie en impact!" wrapText="true" />
        </VBox>

        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #3c3c3c; -fx-background-radius: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Veelgestelde vragen" />
            <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Heeft u problemen met de installatie? Raadpleeg onze handleiding of neem contact op met onze klantenservice." wrapText="true" />
        </VBox>

        <!-- Terug Knop -->
        <Button onMouseClicked="#goToSettings" style="-fx-background-color: #555; -fx-text-fill: white; -fx-font-size: 14px;                        -fx-padding: 10 20; -fx-background-radius: 5;" text="Terug naar Instellingen" />

    </VBox>

</StackPane>
