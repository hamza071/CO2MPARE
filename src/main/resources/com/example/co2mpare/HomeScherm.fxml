<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.co2mpare.HomeController">
    <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">

        <!-- Header -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: #333;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="COâ‚‚MPARE" />
            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                <image>
                    <Image url="@../../../Images/logo.png" />
                </image>
            </ImageView>
        </HBox>

        <!-- Usage Sections -->
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Today Usage -->
            <VBox spacing="10" style="-fx-background-color: #3c3c3c; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Today's Usage" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <HBox spacing="20" alignment="CENTER">
                    <VBox alignment="CENTER">
                        <Label text="Energy" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="12 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label text="Transport" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="8 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Yesterday Usage -->
            <VBox spacing="10" style="-fx-background-color: #3c3c3c; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Yesterday's Usage" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <HBox spacing="20" alignment="CENTER">
                    <VBox alignment="CENTER">
                        <Label text="Energy" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="15 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label text="Transport" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="7 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Weekly Usage -->
            <VBox spacing="10" style="-fx-background-color: #3c3c3c; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Weekly Usage" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <HBox spacing="20" alignment="CENTER">
                    <VBox alignment="CENTER">
                        <Label text="Energy" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="90 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label text="Transport" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="52 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Monthly Usage -->
            <VBox spacing="10" style="-fx-background-color: #3c3c3c; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Monthly Usage" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <HBox spacing="20" alignment="CENTER">
                    <VBox alignment="CENTER">
                        <Label text="Energy" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="350 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label text="Transport" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="210 kg" style="-fx-font-size: 14px; -fx-text-fill: white;" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>

        <!-- Footer Navigatie -->
        <HBox alignment="CENTER" spacing="50" style="-fx-padding: 10; -fx-background-color: #222;">
            <ImageView fitHeight="30" fitWidth="30" onMouseClicked="#goToHome">
                <image>
                    <Image url="@../../../Images/home.png" />
                </image>
            </ImageView>
            <ImageView fitHeight="30" fitWidth="30" onMouseClicked="#goToStats">
                <image>
                    <Image url="@../../../Images/stats.png" />
                </image>
            </ImageView>
            <ImageView fitHeight="30" fitWidth="30" onMouseClicked="#goToSettings">
                <image>
                    <Image url="@../../../Images/settings.png" />
                </image>
            </ImageView>
        </HBox>
    </VBox>
</StackPane>
