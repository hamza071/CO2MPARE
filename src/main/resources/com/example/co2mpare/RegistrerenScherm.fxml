<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>

<StackPane fx:controller="com.example.co2mpare.RegistrerenController"
           xmlns:fx="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           prefWidth="375" prefHeight="667"
           style="-fx-background-color: black;">
    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white; -fx-border-radius: 10px; -fx-border-color: #000; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 20, 0, 0, 0);">

        <!-- Logo -->
        <ImageView fx:id="logo" fitWidth="50" fitHeight="50" preserveRatio="true" style="-fx-margin-bottom: 10;"/>

        <!-- Titel -->
        <Text text="Registreren bij Co2mpare" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #000;"/>
        <Text text="Maak een account aan om je verbruik te volgen en bij te dragen aan een duurzamere toekomst."
              wrappingWidth="300" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>

        <!-- E-mailadres -->
        <TextField fx:id="emailField" promptText="E-mailadres" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

        <!-- Wachtwoord -->
        <PasswordField fx:id="passwordField" promptText="Wachtwoord" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

        <!-- Herhaal Wachtwoord -->
        <PasswordField fx:id="confirmPasswordField" promptText="Bevestig Wachtwoord" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

        <!-- Foutmelding Label -->
        <Label fx:id="errorMessageLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

        <!-- Registratieknop -->
        <Button text="Registreren" style="-fx-background-color: #4B6EF5; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5;" onAction="#handleRegisterButtonClick"/>

        <!-- Voettekst -->
        <Text text="Door te registreren, ga je akkoord met onze Algemene Voorwaarden en Privacybeleid."
              wrappingWidth="300" style="-fx-font-size: 10px; -fx-text-fill: #888;"/>
    </VBox>
</StackPane>
